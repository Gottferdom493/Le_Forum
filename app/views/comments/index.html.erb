<h1>Coucou Comments</h1>

<% @comments.each do |comment| %>
  <h2><%= comment.avis %></h2>
  <% if comment.user == current_user %>
    <%= link_to "Supprimer", comment_path(comment), data: {turbo_method: :delete, turbo_confirm: "Etes vous sur?"} %>
  <% end %>
<% end %>


<%= link_to "Ajoute un Item", new_post_comment_path %>
